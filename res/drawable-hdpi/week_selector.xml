<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <!-- 定义当button 处于pressed 状态时的形态。 -->
<shape>
            <gradient android:endColor="#FF2923" android:startColor="#68C128" />
            <!-- 内容实现渐变 -->
            <stroke android:width="2dp" android:color="#0081E3" />
            <!-- 边框宽度和颜色 -->
            <corners android:radius="20dp" />
            <!-- 圆弧半径 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_pressed="true">
        <!-- 定义当button获得focus时的形态 -->
<shape>
            <gradient android:endColor="#68C128" android:startColor="#FF2923" />

            <stroke android:width="2dp" android:color="#333333" />

            <corners android:radius="20dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>