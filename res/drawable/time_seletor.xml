<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">  
        <!-- 定义当button 处于pressed 状态时的形态。-->  
        <shape>  
            <gradient android:startColor="#0365BC" /><!--内容实现渐变-->  
            <stroke android:width="2dp" android:color="#0081E3" /><!--边框宽度和颜色-->  
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"
                android:bottomRightRadius="110dp" android:topRightRadius="110dp" /><!--圆弧半径-->  
            <padding android:left="10dp" android:top="10dp"  
                android:bottom="10dp" android:right="20dp" />  
        </shape>  
    </item>  
    <item android:state_pressed="true">  
        <!-- 定义当button获得focus时的形态-->  
        <shape>  
            <gradient android:endColor="#FF2923" />  
            <stroke android:width="2dp" android:color="#333333"  />  
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"
                android:bottomRightRadius="110dp" android:topRightRadius="110dp" />  
            <padding android:left="10dp" android:top="10dp"  
                android:bottom="10dp" android:right="10dp" />  
        </shape>  
    </item>  

</selector>
