<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">  
        <!-- 定义当button 处于pressed 状态时的形态。-->  
        <shape>  
            <gradient android:startColor="#0365BC" android:endColor="#0365BC" /><!--内容实现渐变-->  
            <corners android:topLeftRadius="20dp" android:bottomLeftRadius="2dp"
                android:bottomRightRadius="2dp" android:topRightRadius="2dp" /><!--圆弧半径-->  
        
        </shape>  
    </item>  

</selector>
